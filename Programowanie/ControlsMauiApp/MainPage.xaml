<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlsMauiApp.MainPage"
             x:Name="thisPage"
             BindingContext="{x:Reference thisPage}">

    <ScrollView>
        <StackLayout>
            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="Center">
                <Border Stroke="#C49B33"
                        StrokeThickness="4"
                        StrokeShape="RoundRectangle 40,0,0,40"
                        Background="#2B0B98"
                        Padding="16,8">
                    <Label Text=".NET MAUI"
                           TextColor="White"
                           FontSize="18"
                           FontAttributes="Bold" />
                </Border>

                <Border StrokeThickness="4"
                        StrokeShape="RoundRectangle 40,0,0,40"
                        Background="#2B0B98"
                        Padding="16,8">
                    <Border.Stroke>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="Orange"
                                          Offset="0.1" />
                            <GradientStop Color="red"
                                          Offset="0.5" />
                            <GradientStop Color="Brown"
                                          Offset="1.0" />
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Label Text=".NET MAUI"
                           TextColor="White"
                           FontSize="18"
                           FontAttributes="Bold" />
                </Border>
            </StackLayout>

            <StackLayout Orientation="Horizontal"
                         Spacing="10">
                <Label Text="Wybierz datę:"/>
                <DatePicker MinimumDate="{Binding MinimumDate}"
                            MaximumDate="{Binding MaximumDate}"
                            Date="{Binding SelectDate}"/>
                <Label Text="{Binding SelectDate,StringFormat='Wybrana data {0}'}"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal"
                         Spacing="10">
                <Label Text="Wybierz godzine:"
                       VerticalOptions="Center"/>
                <TimePicker Time="{Binding SelectTime}"/>
                <Label Text="{Binding SelectTime}"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="Czy jesteś pełnoletni?"
                       VerticalOptions="Center"/>
                <CheckBox IsChecked="{Binding IsLegalAge}"/>
            </StackLayout>
            <Label Text="{Binding IsLegalAge,StringFormat='Wybrano: {0}'}"/>

            <Label Text="Komponent wielolinijkowy:"/>
            <Editor Background="AliceBlue"
                    AutoSize="TextChanges"
                    CharacterSpacing="1"/>

            <ImageButton Source="dotnet_bot.png"
                         WidthRequest="60"
                         HeightRequest="60"/>

            <Label Text="Podmień zdjęcia"/>
            <Image Source="{Binding SelectedImage}"
                   HeightRequest="185"
                   Aspect="AspectFit"/>
            <Button Text="Zmień zdjęcie"
                    Command="{Binding ChangeImage}" />

            <Label Text="Poziom załadowania danych:"/>
            <ProgressBar Progress="{Binding ProgresDataLevel}"
                         ProgressColor="Red"
                         HeightRequest="10"/>
            <Button Text="Zwiększ poziom załadowania"
                    Command="{Binding ChangeProgresDataLevel}"/>

            <Label Text="Twoje ulubione zwierzę:"/>
            <StackLayout Orientation="Horizontal"
                         Spacing="10"
                         RadioButtonGroup.GroupName="FavoriteAnimals"
                         RadioButtonGroup.SelectedValue="{Binding FavoriteAnimal}">
                <RadioButton Content="Kot" Value="{Binding Content,Source={RelativeSource Self}}"/>
                <RadioButton Content="Pies" Value="{Binding Content,Source={RelativeSource Self}}"/>
                <RadioButton Content="Krowa" Value="{Binding Content,Source={RelativeSource Self}}"/>
                <RadioButton Content="Chomik" Value="{Binding Content,Source={RelativeSource Self}}"/>
            </StackLayout>
            <Label Text="{Binding FavoriteAnimal,StringFormat='Ulubione zwierzę to: {0}'}"/>

            <StackLayout Orientation="Horizontal"
                         Spacing="10">
                <Label Text="Zwiększ lub zmniejsz:"
                       VerticalOptions="Center"/>
                <Stepper Minimum="0"
                         Maximum="100"
                         Increment="2"
                         Value="{Binding StepperValue}"/>
                <Label Text="{Binding StepperValue}"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal"
                         Spacing="10">
                <Label Text="Wybierz:"
                       VerticalOptions="Center"/>
                <Switch IsToggled="{Binding IsOn}"/>
                <Label Text="{Binding IsOn}"/>
                <ActivityIndicator IsRunning="{Binding IsOn}"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal"
                         Spacing="10">
                <Label Text="Kolorowy prostokąt:"
                       VerticalOptions="Center"/>
                <BoxView Color="red"
                         WidthRequest="50"
                         HeightRequest="60"
                         CornerRadius="10"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal"
                         Spacing="10">
                <Label Text="Wybierz pozycję:"
                       VerticalOptions="Center"/>
                <Picker ItemsSource="{Binding AnimalCollection}"
                        SelectedItem="{Binding SelectedAnimal}"/>
                <Label Text="{Binding SelectedAnimal}"
                       VerticalOptions="Center"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal"
                         Spacing="10">
                <Label Text="Wybierz pozycję:"
                       VerticalOptions="Center"/>
                <Picker ItemsSource="{Binding CarsCollection}"
                        SelectedItem="{Binding SelectedCar}"
                        ItemDisplayBinding="{Binding Name}"/>
                <Label Text="{Binding SelectedCar.Name}"
                       VerticalOptions="Center"/>
                <Label Text="{Binding SelectedCar.Description}"
                       VerticalOptions="Center"/>
            </StackLayout>

            <CollectionView ItemsSource="{Binding CarsCollection}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedCar}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Orientation="Horizontal" Spacing="10">
                            <Label Text="{Binding Name}"/>
                            <Label Text="{Binding Description}"
                                   FontAttributes="Italic"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <CarouselView ItemsSource="{Binding Monkeys}"
                          IndicatorView="indicatorView">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Border Stroke="DarkGray"
                                    StrokeShape="RoundRectangle 5"
                                    Margin="20"
                                    Padding="20"
                                    HeightRequest="360"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center">
                                <StackLayout>
                                    <Label Text="{Binding Name}"
                                           FontAttributes="Bold"
                                           FontSize="18"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center" />
                                    <Image Source="{Binding ImageName}"
                                           Aspect="AspectFill"
                                           HeightRequest="150"
                                           WidthRequest="150"
                                           HorizontalOptions="Center" />
                                    <Label Text="{Binding Location}"
                                           HorizontalOptions="Center" />
                                    <Label Text="{Binding Details}"
                                           FontAttributes="Italic"
                                           HorizontalOptions="Center"
                                           MaxLines="5"
                                           LineBreakMode="TailTruncation" />
                                </StackLayout>
                            </Border>
                        </StackLayout>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
            <IndicatorView x:Name="indicatorView"
                           IndicatorColor="LightGray"
                           SelectedIndicatorColor="DarkGray"
                           HorizontalOptions="Center"
                           Margin="20"/>

            <SwipeView>
                <SwipeView.LeftItems>
                    <SwipeItems>
                        <SwipeItem Text="Favorite"
                                   IconImageSource="favorite.png"
                                   BackgroundColor="LightGreen"/>
                        <SwipeItem Text="Delete"
                                   IconImageSource="delete.png"
                                   BackgroundColor="LightPink"/>
                    </SwipeItems>
                </SwipeView.LeftItems>
                <!-- Content -->
                <Label Text="Przeciągnij mnie w bok" FontSize="18" Grid.Row="0"/>
            </SwipeView>

            <Label Text="Wypełnij formularz"
                   FontSize="20"/>
            <TableView Intent="Data">
                <TableRoot>
                    <!-- Sekcja 1: Dane osobowe -->
                    <TableSection Title="Dane osobowe">
                        <EntryCell Label="Imię:"
                                   Text="{Binding FirstName}"
                                   Placeholder="Podaj imię" />

                        <EntryCell Label="Nazwisko:"
                                   Text="{Binding LastName}"
                                   Placeholder="Podaj nazwisko" />

                        <EntryCell Label="Email:"
                                   Text="{Binding Email}"
                                   Placeholder="Podaj adres email"
                                   Keyboard="Email" />

                        <SwitchCell Text="Chcę otrzymywać newsletter"
                                    On="{Binding IsNewsletterEnabled}" />
                    </TableSection>

                    <!-- Sekcja 2: Preferencje -->
                    <TableSection Title="Preferencje">
                        <TextCell Text="O aplikacji"
                                  Detail="Kliknij, aby wyświetlić szczegóły"
                                  Command="{Binding AboutCommand}" />

                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="10">
                                <Label Text="Wybierz kolor motywu:"
                                       VerticalOptions="Center" />

                                <Picker Title="Motyw"
                                        WidthRequest="150"
                                        ItemsSource="{Binding Themes}"
                                        SelectedItem="{Binding SelectedTheme}" />
                            </StackLayout>
                        </ViewCell>
                    </TableSection>

                </TableRoot>
            </TableView>

        </StackLayout>
    </ScrollView>

</ContentPage>