<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleCalculatorMauiApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label Text="Podaj pierwsza liczbe"/>
            <Entry x:Name="firstNumberEntry"/>
            <Label Text="Podaj drugą liczbe"/>
            <Entry x:Name="secondNumberEntry"/>
            <Button Text="Oblicz"
                    Clicked="Button_Clicked"/>
            <Label x:Name="resoultLabel"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
